{
    "name": "osmianski/laravel-sync",
    "description": "A Laravel package for syncing data between database, search engine, file system and external services.",
    "license": "MIT",
    "authors": [
        {
            "name": "Vlad Osmianski",
            "email": "vlaosm@gmail.com",
            "homepage": "https://osmianski.com/"
        }
    ],
    "homepage": "https://github.com/osmianski/laravel-sync",
    "keywords": ["Laravel", "Sync"],
    "require": {
        "illuminate/support": "~9"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "orchestra/testbench": "~7"
    },
    "autoload": {
        "psr-4": {
            "Osmianski\\Sync\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Osmianski\\Sync\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Osmianski\\Sync\\SyncServiceProvider"
            ]
        }
    }
}
